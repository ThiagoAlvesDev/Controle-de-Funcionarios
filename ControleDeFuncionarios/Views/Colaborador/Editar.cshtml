@model ControleDeFuncionarios.Models.ColaboradorModel

@{
	ViewData["Title"] = "Editar";
}

<h1>Editar</h1>


<hr />
<div>

	<form class="row g-3" asp-action="Editar" method="post">
		<h2 class="display-6">Dados do Colaborador</h2>

		<div class="col-md-6">
			<label for="inputName" class="form-label">Nome completo</label>
			<input asp-for="NomeColaborador" type="text" class="form-control" id="inputName">
		</div>
		<div class="col-md-3">
			<label for="inputCPF" class="form-label">CPF</label>
			<input asp-for="Cpf" type="text" class="form-control">
		</div>
		<div class="col-3">
			<label for="inputAddress" class="form-label">Matrícula</label>
			<input asp-for="Matricula" type="text" class="form-control" >
		</div>



		<h2 class="display-6">Cargo atribuído</h2>

		<div class="col-md-3">
			<label for="inputCargo" class="form-label">Nome</label>
			<input asp-for="Cargo.Funcao" Type="text" class="form-control">
		</div>
		<div class="col-md-3">
			<label for="inputCBO" class="form-label">CBO (Classificação Brasileira de Ocupações)</label>
			<input asp-for="Cargo.Cbo" type="text" class="form-control">
		</div>
		<div class="col-5">
			<label for="inputAddress" class="form-label">Descrição da Atividade</label>
			<textarea asp-for="Cargo.Descricao" type="text" class="form-control"> </textarea>
		</div>
		<div class="col-md-2">
			<label class="form-label">Data de Admissão</label>
			<input asp-for="DataAdmissao" class="form-control" />
		</div>
		<div class="col-md-2">
			<label class="form-label">Data de Demissão</label>
			<input asp-for="DataDemissao" class="form-control" id="inputDataDemissao" />
		</div>



		<h2 class="display-6">Dados da Empresa</h2>

		<div class="col-3">
			<label for="inputAddress" class="form-label">Razão Social</label>
			<input asp-for="Empresa.RazaoSocial" type="text" class="form-control">
		</div>
		<div class="col-md-6">
			<label for="inputName" class="form-label">Nome Fantasia</label>
			<input asp-for="Empresa.NomeFantasia" type="text" class="form-control">
		</div>
		<div class="col-md-3">
			<label for="inputCNPJ" class="form-label">CNPJ</label>
			<input asp-for="Empresa.Cnpj" type="text" class="form-control">
		</div>
		<div class="form-group mt-3">
			<input type="submit" value="Save" class="btn btn-primary" />

			<a asp-action="Index" class="btn btn-primary">Voltar</a>
		</div>
	</form>

</div>

@if (ViewData.ModelState.ContainsKey("DataDemissao"))
{
	<div class="text-danger">
		@Html.ValidationMessage("DataDemissao")
	</div>
}


@section Scripts {
    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");


}

}

